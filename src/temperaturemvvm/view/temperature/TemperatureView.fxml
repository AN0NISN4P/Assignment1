<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="220.0" prefWidth="471.0" spacing="10.0" userData="Temperature presenter" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="temperaturemvvm.view.temperature.TemperatureViewController">
    <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="View">
              <items>
                  <RadioMenuItem mnemonicParsing="false" selected="true" text="Temperature">
                     <toggleGroup>
                        <ToggleGroup fx:id="Scene" />
                     </toggleGroup>
                  </RadioMenuItem>
                  <RadioMenuItem mnemonicParsing="false" onAction="#swapScene" text="Graph" toggleGroup="$Scene" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
        <HBox>
            <children>
                <Label alignment="CENTER" prefHeight="35.0" prefWidth="597.0" text="Temperature presenter" textAlignment="CENTER">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="87.0" prefWidth="471.0" spacing="20.0">
            <children>
                <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateButtonPressed" prefHeight="51.0" prefWidth="114.0" text="Update" textAlignment="CENTER">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>
                <Label fx:id="filterLabel" alignment="CENTER_RIGHT" prefHeight="39.0" prefWidth="89.0" text="All" textAlignment="RIGHT">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="filterField" prefHeight="39.0" prefWidth="84.0">
                    <font>
                        <Font size="18.0" />
                    </font>
                </TextField>
                <Button fx:id="filterButton" mnemonicParsing="false" onAction="#onFilter" text="Filter">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </HBox>
        <Label fx:id="outputLabel" alignment="CENTER" prefHeight="35.0" prefWidth="597.0" textAlignment="CENTER" VBox.vgrow="ALWAYS">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
      <HBox alignment="BOTTOM_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="50.0" VBox.vgrow="NEVER">
         <children>
            <AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
               <children>
                  <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="20.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="10.0">
                     <children>
                        <Button fx:id="powerUpButton" mnemonicParsing="false" onAction="#turnPowerUp" text="Power Up" />
                        <Button fx:id="powerDownButton" mnemonicParsing="false" onAction="#turnPowerDown" text="Power Down" />
                     </children>
                  </HBox>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </AnchorPane>
            <Label fx:id="radiatorPowerLabel" alignment="TOP_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="N/A" HBox.hgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="2.0" left="2.0" right="2.0" top="10.0" />
         </padding>
      </HBox>
    </children>
</VBox>
